<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Urlzy : A URL Shortener</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300" rel="stylesheet">

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
     
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>

    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<div class="container">
  {{#if error}}
    <div class="row red lighten-4">
      <div class="col s12">
        <p>
          Oops! {{ error }}
        </p>
      </div>
    </div>
  {{/if}}

  <div class="row">
    <h1 class="flow-text center-align">
      Your shortened URLs
    </h1>
  </div>

  <div class="row center-align">
    {{#if urls}}
      {{#each urls}}
        <div class="col s12 l6">
          <div class="card horizontal">
            <div class="card-stacked col s12">
              <div class="card-content center-align">
                <a class="truncate link-url" href="{{../host }}/{{ this.shortUrl }}">
                  {{../host }}/{{ this.shortUrl }}
                </a>

                <h6>links to</h6>

                <a class="truncate link-url" href="{{ this.destinationUrl }}">
                  {{ this.destinationUrl }}
                </a>
              </div>

              <div class="card-action">
                <form class="col s12 right-align" action="{{../host }}/{{ this.shortUrl }}/delete" method="post">
                  <button class="btn-small red waves-effect waves-light" type="submit" name="action">
                    Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="col s12 center-align">
        No urls added yet.
      </div>
    {{/if}}  
  </div>
  
  <div class="row">
    <div class="col s12">
      <h1 class="flow-text center-align">
        Shorten a URL
      </h1>
    </div>

    <form class="col s12" action="{{../host }}" method="post">
      <div class="row">
        <div class="col s12">
          <label for="urlInput">Destination URL</label>

          <input type="url" id="urlInput" name="url" placeholder="http://www.google.com" required>
        </div>

        <div class="row">
          <div class="col s12 right-align">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
          </div>
        </div>
      </div>
      
    </form>
  </div>
</div>

<div class="footer-copyright">
  <div class="divider"></div>
  <div class="container">
    © Fredrik Eklööf (Do Whatever You Want With This Code)
    <a class="right" href="#!">GitHub</a>
  </div>
</div>

</body>
</html>